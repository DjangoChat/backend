[run]
source = src/apps
branch = True
omit =
    */migrations/*
    */venv/*
    */env/*
    */.venv/*
    manage.py
    */settings/*
    */tests/*
    */__pycache__/*
    */test/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
show_missing = True
precision = 2
fail_under = 80

[html]
directory = htmlcov
title = Platoform Backend Coverage Report

[xml]
output = coverage.xml
